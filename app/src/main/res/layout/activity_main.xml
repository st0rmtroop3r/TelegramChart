<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/spn_chart_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <com.st0rmtroop3r.telegramchart.CoordinatesView
        android:id="@+id/coordinates"
        android:layout_width="match_parent"
        android:layout_height="@dimen/coordinates_height"
        android:paddingTop="30dp"
        android:paddingBottom="@dimen/coordinates_bottom_padding"
        android:layout_below="@id/spn_chart_selector" />

    <com.st0rmtroop3r.telegramchart.ReactiveChartView
        android:id="@+id/reactive"
        android:layout_width="match_parent"
        android:layout_height="@dimen/chart_height"
        android:layout_below="@id/spn_chart_selector"
        android:paddingTop="30dp"
        android:paddingLeft="@dimen/margin_horizontal"
        android:paddingStart="@dimen/margin_horizontal"
        android:paddingRight="@dimen/margin_horizontal"
        android:paddingEnd="@dimen/margin_horizontal" />

    <com.st0rmtroop3r.telegramchart.ChartWindowSelector
        android:id="@+id/selector"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/coordinates"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="@dimen/margin_horizontal"
        android:layout_marginStart="@dimen/margin_horizontal"
        android:layout_marginRight="@dimen/margin_horizontal"
        android:layout_marginEnd="@dimen/margin_horizontal"
        android:paddingTop="2dp"
        />

    <com.st0rmtroop3r.telegramchart.Badge
        android:id="@+id/grid"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="-16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@drawable/round_corners"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/selector">

        <LinearLayout
            android:id="@+id/ll_checkboxes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:divider="@drawable/divider"
            android:showDividers="middle"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            />

    </ScrollView>

</RelativeLayout>