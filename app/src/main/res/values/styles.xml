<resources>

    <!-- Base application theme. -->
    <style name="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="axis_marks_text_color">@color/text_color</item>
        <item name="axis_lines_color">@color/line_color</item>
        <item name="highlight_line_color">@color/highlight_line</item>
        <item name="label_background_color">@color/label_background_light</item>
        <item name="label_title_color">@color/dark_grey</item>
        <item name="label_frame_color">@color/label_frame_light</item>
        <item name="window_selector_dim_color">@color/window_selector_dim</item>
        <item name="window_selector_frame_color">@color/window_selector_frame</item>
        <item name="line_checkbox_text_color">@color/dark_grey</item>
        <item name="line_checkbox_divider_color">@color/divider_light</item>
        <item name="chart_title_color">@color/chart_title_light</item>
    </style>

    <style name="AppThemeDark">
        <item name="android:colorPrimary">@color/colorPrimary_dark</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark_dark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="axis_marks_text_color">@color/text_color_dark</item>
        <item name="axis_lines_color">@color/line_color_dark</item>
        <item name="highlight_line_color">@color/highlight_line_dark</item>
        <item name="label_background_color">@color/label_background_dark</item>
        <item name="label_title_color">@color/label_title_dark</item>
        <item name="label_frame_color">@color/label_frame_dark</item>
        <item name="window_selector_dim_color">@color/window_selector_dim_dark</item>
        <item name="window_selector_frame_color">@color/window_selector_frame_dark</item>
        <item name="line_checkbox_text_color">@color/white</item>
        <item name="line_checkbox_divider_color">@color/divider_dark</item>
        <item name="chart_title_color">@color/chart_title_dark</item>
    </style>

</resources>
